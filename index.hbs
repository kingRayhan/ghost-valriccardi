{{!< default}} 

{{#if @site.description}}
<div class="max-w-2xl mx-auto my-12 text-center md:my-28">
    <h2 class="text-2xl font-bold md:text-5xl">
        {{@site.description}}
    </h2>
</div>
{{/if}}


<div class="max-w-3xl mx-auto">
    <div class="flex flex-col space-y-20" id="posts">
        {{#foreach posts filter="featured:true"}}
            {{> "article-card"}}
        {{/foreach}}
    </div>

    <div class="my-24">
        <button id="loadmore" class="flex items-center mx-auto space-x-2 text-xl font-bold">
            Load More
        </button>
    </div>
</div>