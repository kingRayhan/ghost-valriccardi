{{!< default}} 

{{#if @site.description}}
<div class="max-w-2xl mx-auto my-20 text-center md:my-28">
    <h2 class="text-2xl font-bold md:text-5xl">{{@site.description}}</h2>
</div>
{{/if}}


<div class="max-w-3xl mx-auto">
    <div class="flex flex-col space-y-20">
        {{#foreach posts}}
            {{> "article-card"}}
        {{/foreach}}
    </div>

    <div class="my-10 ">
        {{pagination}}
    </div>
</div>