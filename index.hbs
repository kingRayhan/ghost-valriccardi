{{!< default}} 

{{#if @site.description}}
<div class="max-w-2xl mx-auto my-20 text-center">
    <h2 class="text-5xl font-bold">{{@site.description}}</h2>
</div>
{{/if}}


<div class="max-w-3xl mx-auto ">
    <div class="flex flex-col space-y-10">
        {{#foreach posts}}
            {{#if @odd}}
                {{> "card-left"}}
            {{else}}
                {{> "card-right"}}
            {{/if}}
        {{/foreach}}
    </div>
</div>