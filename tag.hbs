{{!< default}} 


{{#tag}} 
    <div class="max-w-2xl mx-auto my-12 text-center md:my-28">
        <h2 class="text-2xl font-bold md:text-5xl">{{name}}</h2>
        {{#if description}}
        <p class="mt-2 text-2xl text-color-dark-primary font-nunito">{{description}}</p>
        {{/if}}
    </div>
{{/tag}}


<div class="max-w-3xl mx-auto">
    <div id="posts" class="flex flex-col space-y-20">
        {{#foreach posts}}
        {{> "article-card-tag"}}
        {{/foreach}}
    </div>

    <div class="my-24">
        <button id="loadmore" class="flex items-center mx-auto space-x-2 text-xl font-bold">
            Load More
        </button>
    </div>
</div>