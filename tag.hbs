{{!< default}} 


{{#tag}} 
    <div class="max-w-xl mx-auto my-20 text-center md:my-28">
        <h2 class="text-2xl font-bold md:text-5xl">{{name}}</h2>
        {{#if description}}
        <p class="mt-2 text-2xl text-color-dark-primary font-nunito">{{description}}</p>
        {{/if}}
    </div>
{{/tag}}


<div class="max-w-3xl mx-auto">
    <div class="flex flex-col space-y-20">
        {{#foreach posts}}
        {{> "article-card-tag"}}
        {{/foreach}}
    </div>

    <div class="my-10 ">
        {{pagination}}
    </div>
</div>