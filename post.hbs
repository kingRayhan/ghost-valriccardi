{{!< default}}

{{#post}}
    <div class="max-w-3xl mx-auto my-20 ">
        <header class="flex flex-col">
            <h1 class="text-4xl font-bold text-center text-color-dark-primary">{{title}}</h1>
            <div class="flex justify-center my-2 space-x-3 text-dark-secondary">
                {{#primary_author}}
                <span>{{name}}</span>
                {{/primary_author}}
            
                <span>|</span>
                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                <span>|</span>
                <span>{{reading_time}} min read</span>
            </div>
            
            {{#if custom_excerpt}}
            <p class="my-8 text-xl font-semibold text-dark-primary">
                {{custom_excerpt}}
            </p>
            {{/if}}
            
            {{#if feature_image}}
            <figure class="self-center w-screen max-w-6xl">
                <img class="w-full" srcset="{{img_url feature_image size='s'}} 300w, {{img_url feature_image size='m' }} 600w, {{img_url
                            feature_image size='l' }} 1000w, {{img_url feature_image size='xl' }} 2000w"
                    sizes="(max-width: 1000px) 1000px, 2000px" loading="lazy" src="{{img_url feature_image size='xl'}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
            
                {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            
            </figure>
            {{/if}}
        </header>
        

        <div class="my-10 content-typography">
            {{{content}}}
        </div>
    </div>
{{/post}}