{{!< default}}

{{#post}}
    <div class="max-w-3xl mx-auto my-5 md:my-20 ">
        <header class="flex flex-col">
            <h1 class="text-2xl font-bold text-center md:text-4xl text-color-dark-primary">{{title}}</h1>
            <div class="flex justify-center mt-8 {{#if custom_excerpt}}mb-2{{else}}mb-8{{/if}} space-x-3 font-semibold text-gray-500 font-nunito">
                {{#primary_author}}
                <span>{{name}}</span>
                {{/primary_author}}
            
                <span>|</span>
                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                <span>|</span>
                <span>{{reading_time}}</span>
            </div>
            
            {{#if custom_excerpt}}
            <p class="mb-8 text-xl font-semibold text-center text-dark-primary font-nunito">
                {{custom_excerpt}}
            </p>
            {{/if}}
            
            {{#if feature_image}}
            <figure class="self-center w-screen max-w-6xl">
                <img class="w-full" srcset="{{img_url feature_image size='s'}} 300w, {{img_url feature_image size='m' }} 600w, {{img_url
                            feature_image size='l' }} 1000w, {{img_url feature_image size='xl' }} 2000w"
                    sizes="(max-width: 1000px) 1000px, 2000px" loading="lazy" src="{{img_url feature_image size='xl'}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
            
                {{#if feature_image_caption}}
                <figcaption class="mt-4 text-gray-700">{{feature_image_caption}}</figcaption>
                {{/if}}
            
            </figure>
            {{/if}}
        </header>
        

        <div class="my-10 content-typography">
            {{#if access}}
                {{{content}}}
            {{else}}
                {{{html}}}
            {{/if}}
        </div>
        {{^if access}}
            {{> "content-cta"}}
        {{/if}}
        
    </div>
{{/post}}